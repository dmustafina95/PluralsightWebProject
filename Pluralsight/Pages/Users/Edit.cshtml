@page "{userId:int?}"
@model Pluralsight.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.User.FirstName @Model.User.LastName</h2>

<form method="post">
    <input type="hidden" asp-for="User.Id" />
    <div class="form-group">
        <label asp-for="User.FirstName" />
        <input asp-for="User.FirstName" class="form-control" />
        <span class="text-danger" asp-validation-for="User.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.LastName" />
        <input asp-for="User.LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="User.LastName"></span>

    </div>
    <div class="form-group">
        <label asp-for="User.Dob" />
        <input class="form-control" asp-for="User.Dob"/>
        <span class="text-danger" asp-validation-for="User.Dob"> </span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

